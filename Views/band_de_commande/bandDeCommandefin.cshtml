@using tools
@using SystemeCommerciale
@model BandDeCommandeModel
<link rel="stylesheet" href="~/css/proforma.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.4/jspdf.min.js"></script>
<div class="container">

<br>
    <!-- BOuCLEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEE -->
    <div class="titre">Bon de commande: @Model.getProduitFournisseur().getFournisseur().getNomFournisseur()</div>
    <div class="proforma" id="proforma">
            <div class="header">
                <h1></h1>
                <address contenteditable class="address">
                    <p>Contact :  @Model.getProduitFournisseur().getFournisseur().getContact()</p>
                    <p>Email :  @Model.getProduitFournisseur().getFournisseur().getEmail()</p>
                </address>
            </div>

            <article class="article">
                
                <table class="meta">
                    <tr>
                        <th><span contenteditable>Titre</span></th>
                        <td><span contenteditable id="reference">@Model.getTitre()</span></td>
                    </tr>
                    <tr>
                        <th><span contenteditable>Reference</span></th>
                        <td><span contenteditable id="reference">@Model.getReference()</span></td>
                    </tr>
                    <tr>
                        <th><span contenteditable>Date</span></th>
                        <td><span contenteditable>@Model.getDate()</span></td>
                    </tr>
                    <tr>
                        <th><span contenteditable>Methode de payement</span></th>
                        <td><span contenteditable>@Model.getMode_payementActive().getdesignation()</span></td>
                    </tr>
                    <tr>
                        <th><span contenteditable>Montant</span></th>
                        <td><span id="prefix" contenteditable>@Model.getMontant_totale()</span> <span>Ariary</span></td>
                    </tr>
                </table>
                <table class="inventory">
                    <thead>
                        <tr>
                            <th><span contenteditable>Produit</span></th>
                            <th><span contenteditable>Prix unitaire</span></th>
                            <th><span contenteditable>TVA</span></th>
                            <th><span contenteditable>Quantite</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><span contenteditable> @Model.getProduitFournisseur().getProduit().getNomProduit()</span></td>
                            <td><span contenteditable id="pu">  @Model.getProduitFournisseur().getPrixUnitaire() </span>Ariary</td>
                            <td><span data-prefix id="tva">@Model.getProduitFournisseur().getTva()</span><span contenteditable>%</span></td>
                            <td><span contenteditable>@Model.getQuantite()</span></td>
                        </tr>
                    </tbody>
                </table>
                <table class="balance">
                    <tr>
                        <th><span contenteditable>Prix HT</span></th>
                        <td><span data-prefix id="montant">@Model.getMontant()</span><span> Ariary</span></td>
                    </tr>
                    <tr>
                        <th><span contenteditable>Prix du TVA</span></th>
                        <td><span data-prefix id="montant_tva">@Model.getMontant_tva()</span><span contenteditable> Ariary</span></td>
                    </tr>
                    <tr>
                        <th><span contenteditable>Prix total</span></th>
                        <td><span data-prefix id="montant_totale">@Model.getMontant_totale()</span><span> Ariary</span></td>
                    </tr>
                </table>
                <input type="hidden" value="@Model.getProduitFournisseur().getProduit().getIdProduit()" id="id_produit">
                <input type="hidden" value="@Model.getProduitFournisseur().getFournisseur().getIdFournisseur()" id="id_fournisseur">
            <p><button id="generatePDF" >Exporter PDF</button></p>
            </article>
            <aside>
                <h1><span contenteditable></span></h1>
                <div contenteditable>
                    <p></p>
                </div>
            </aside>
    </div>
 
    </div>
    <!-- <script type="text/javascript" src="~/js/band_de_commande.js"></script> -->
    <script type="text/javascript" src="~/js/script.js"></script>

</div>